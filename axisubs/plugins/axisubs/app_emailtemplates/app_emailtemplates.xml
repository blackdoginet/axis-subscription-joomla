<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="axisubs" method="upgrade">
    <name>Email Templates app for Axisubs</name>
    <version>1.0</version>
    <creationDate>April 2016</creationDate>
    <author>Sasi varna kumar</author>
    <authorEmail>sasi@flycart.org</authorEmail>
    <authorUrl>http://flycart.org</authorUrl>
    <copyright>2016 Flycart Technologies LLP</copyright>
    <license>GNU General Public License v3 or later versions</license>
    <description>Email Templates app for axisubs.</description>
    <files>
        <filename plugin="app_emailtemplates">app_emailtemplates.php</filename>
        <filename>index.html</filename>
        <folder>app_emailtemplates</folder>  
    </files>
    <languages>
        <language tag="en-GB">languages/en-GB.plg_axisubs_app_emailtemplates.ini</language>        
    </languages>
    <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="display_name" type="text" size="30" default="" label="axisubs_plugin_display_name" description="axisubs_plugin_display_name_desc"/>
      </fieldset>
    </fields>
</config>
</extension>
